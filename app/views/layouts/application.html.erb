                            <a class="navbar-brand" href="/users">Project Pet</a>
                        <% end %>
                    </div>
                    <div class="navbar-collapse collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <% if current_adopter %>
                                <li><a href="/adopters">Home</a></li>
                            <% else %>
                                <li><a href="/users">Home<span></span></a></li>
                            <% end %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown">Login</a>
                                <ul class="dropdown-menu">
                                
                                    <li><a href="/users/sign_up">Sign Up</a></li>
                                    <li><a href="/users/sign_in">Member Login</a></li>
