<section id="content-region-3" class="padding-40 page-tree-bg">
            <div class="container">
                <h3 class="page-tree-text">Meet <%= @paw.name %></h3>
            </div>
        </section><!--page-tree end here-->
<div class="space-70"></div>
        <div class="container portfolio-details">
      
            <div class="row">
                <div class="col-md-8 portfolio-single-slide margin-btm-40">
                    <div>
                      <img src="<%= @paw.image %>" class="img-responsive" alt="">
          
                    </div><!--flex slider-->
                    <div class="portfolio-single-desc">
                        <h3><%= @paw.name %></h3>
                        <h4><%= @paw.description%></h4>
  
                        <hr>
                    </div><!--portfolio detail-->
                </div>
                <div class="col-md-4">
                    <div class="portfolio-side-bar">
                        <p>
                            <strong>My Name is: </strong><%= @paw.name %>
                        </p>
                          <p>
                            <strong>I am a: </strong><%= @paw.gender %>
                        </p>
                         <p>
                            <strong>Breed: </strong><%= @paw.breed %>
                        </p> 
                        <p>
                            <strong>I weigh: </strong><%= @paw.weight %>
                        </p> 
                        <p>
                            <strong>Color: </strong><%= @paw.color %>
                        </p>
                         <p>
                            <strong>I am: </strong><%= @paw.age %> years old.
                        </p> 
                        <p>
                            <strong>My energy level is : </strong><%= @paw.energy_level %> out of 5.
                        </p> 
                        <p>
                            <strong>I need a yard : </strong><%= @paw.needs_yard %>
                        </p> 
                        <p>
                            <strong>I have special needs : </strong><%= @paw.special_needs %>
                        </p> 
                        <p>
                            <strong>Kids are ok: </strong><%= @paw.kids_ok %>
                        </p>
                        <p>
                            <strong>Visit me at </strong><%= @paw.location %>
                        </p>
                        <br>
                        <p>
                            <a href="/paws" class="btn btn-radius theme-btn-color">Back to all Pets</a>
                            <%= form_tag "/favorite_paws", method: :post do %>
                              <%= hidden_field_tag :paw_id, @paw.id %>
                              <%= submit_tag "Add to favorites", class: "btn btn-success" %>
                            <% end %>

                        </p>
                    </div>
                </div>
            </div>
        </div><!--portfolio single container end-->
      
        <div class="space-70"></div>


