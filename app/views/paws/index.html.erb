<section id="content-region-3" class="padding-40 page-tree-bg">
    <div class="container">
        <h3 class="page-tree-text">
            Pets looking for a home
        </h3>
    </div>
</section><!--page-tree end here-->
<div class="space-70"></div>

<div class="portfolio-masonary-wrapper">
  <div class="container mas-boxes">
    <% @paws.each do |paw|%>
      <div class="mas-boxes-inner direc-hover-box wow animated fadeInUp">
          <a href="/paws/<%= paw.id %>">
              <img src="<%= paw.image %>" class="img-responsive" alt="">
              <div class="direc-overlay">
                  <span>
                    <h2>Name: <%= paw.name %></h2>
                    <p><%= paw.breed %></p>
                    <p><%= paw.description %></p>
                  </span>
              </div>
          </a>
      </div><!--masonry box-->
    <% end %>
  </div>

  <div ng-app="app">
    <div ng-controller="pawCtrl" ng-init="setup()">
      <div ng-app="myApp">
        Search: <input ng-model="name">
        <button ng-click="searchPaw(name)">search</button>
      </div>
      <div ng-repeat="paw in paws">
        <h2>{{ paw.petName }}</h2>
        <img ng-src="{{paw.imageUrl}}">
      </div>
    </div>
  </div>

</div><!--masonary wrapper-->
