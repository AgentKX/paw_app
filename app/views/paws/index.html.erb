<section id="content-region-3" class="padding-40 page-tree-bg">
    <div class="container">
        <h3 class="page-tree-text">
            Pets looking for a home
        </h3>
    </div>
</section><!--page-tree end here-->
<div class="space-70"></div>

<div class="portfolio-masonary-wrapper">
  <div class="container mas-boxes">
    <% @paws.each do |paw|%>
      <div class="mas-boxes-inner direc-hover-box wow animated fadeInUp">
          <a href="/paws/<%= paw.id %>">
              <img src="<%= paw.image %>" class="img-responsive" alt="">
              <div class="direc-overlay">
                  <span>
                    <h2>Name: <%= paw.name %></h2>
                    <p><%= paw.breed %></p>
                    <p><%= paw.description %></p>
                  </span>
              </div>
          </a>
      </div><!--masonry box-->
    <% end %>
  </div>

  <div ng-app="app">
    <div ng-controller="pawCtrl" ng-init="setup()">
      <div ng-app="myApp">
        </div>
      <div class="container">
      <div class="search">
        <h3>Or, upload a photo:</h3>
        <form>
          <input type="file" accept="image/*;capture=camera" class="btn theme-btn-default btn-lg" file-model="fileToUpload"/>
          <button class="btn theme-btn-default btn-lg" ng-click="searchPaw2(fileToUpload)">Search</button>
        </form>
      </div>
      </div>

      <div class="cat" ng-if="loadingSearch">
      <p>Loading your matches...</p>
      <style>
      .cat {
        text-align: center;
      p {
        text-align: center;
      }
      }
      </style>

        <img src="assets/img/346.gif" alt="" style="width:60px;height:60px;">
      </div>
      
      <div class="container" ng-repeat="paw in paws">
        <h2>{{ paw.petName }}</h2>
        <h2>{{ paw.petDescription }}</h2>
        <button ng-click="addToExternalFavorite(paw)"class="btn theme-btn-default btn-lg">Add to favorite</button>
        <img ng-src="{{paw.imageUrl}}">
      </div>
    </div>
  </div>

</div><!--masonary wrapper-->
